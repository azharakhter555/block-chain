<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>MetaMask Login Example</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">

    <!-- Google Web Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@400;500;600&family=Teko:wght@400;500;600&display=swap" rel="stylesheet">

    <!-- Icon Font Stylesheet -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.10.0/css/all.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css" rel="stylesheet">

    <!-- Libraries Stylesheet -->
    <link href="/lib/animate/animate.min.css" rel="stylesheet">
    <link href="/lib/owlcarousel/assets/owl.carousel.min.css" rel="stylesheet">
    <link href="/lib/tempusdominus/css/tempusdominus-bootstrap-4.min.css" rel="stylesheet" />

    <!-- Customized Bootstrap Stylesheet -->
    <link href="/css/bootstrap.min.css" rel="stylesheet">

    <!-- Template Stylesheet -->
    <link href="/css/style.css" rel="stylesheet">
</head>
<body>
    <!-- MetaMask Login Section -->
    <div id="metamaskMessage"></div>
    <button id="loginBtn">Login with MetaMask</button>
    <button id="logoutBtn" style="display: none;">Logout</button>

    <!-- Bootstrap JS (optional) -->
    <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/lib/wow/wow.min.js"></script>
    <script src="/lib/easing/easing.min.js"></script>
    <script src="/lib/waypoints/waypoints.min.js"></script>
    <script src="/lib/counterup/counterup.min.js"></script>
    <script src="/lib/owlcarousel/owl.carousel.min.js"></script>
    <script src="/lib/tempusdominus/js/moment.min.js"></script>
    <script src="/lib/tempusdominus/js/moment-timezone.min.js"></script>
    <script src="/lib/tempusdominus/js/tempusdominus-bootstrap-4.min.js"></script>

    <!-- Template Javascript -->
    <script src="/js/main.js"></script>

    <script>
        $(document).ready(function() {
            // Function to handle MetaMask connection
            function connectMetamask() {
                ethereum.request({ method: 'eth_requestAccounts' })
                    .then(function(accounts) {
                        localStorage.setItem('metamaskId', accounts[0]);
                    
                        performActions();
                    })
                    .catch(function(error) {
                        console.error("Error connecting to MetaMask:", error);
                    });
            }

            // Function to perform actions based on login status
            function performActions() {
                const metamaskId = localStorage.getItem('metamaskId');
                if (metamaskId) {
                    window.location.href = '/users';
                    // Perform actions here...
                } else {
                    console.log("Not logged in");
                    // Perform actions here...
                }
            }

            // Check for MetaMask presence and handle login button click
            if (window.ethereum) {
                $("#loginBtn").click(function() {
                    connectMetamask();
                });
            } else {
                console.log("MetaMask not detected.");
                // Display message to the user to configure MetaMask
                $("#metamaskMessage").text("Please configure MetaMask to use this feature.");
                $("#loginBtn").prop("disabled", true);
            }

            // Handle logout button click
            <!-- $("#logoutBtn").click(function() {
                localStorage.removeItem('metamaskId');
                $("#loginBtn").show();
                $("#logoutBtn").hide();
                performActions();
            }); -->
        });
    </script>
</body>
</html>
